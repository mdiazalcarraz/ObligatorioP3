@model LogicaNegocio.Dominio.Usuario

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (@Context.Session.GetString("usu") == Model.Email)
            {
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" disabled="true" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            } else
            {
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Id" class="control-label">ID</label>
                <input asp-for="Id" class="form-control" disabled="true" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            @if (@Context.Session.GetString("usu") == Model.Email)
            {
                <div class="form-group">
                    <label asp-for="Administrador" class="control-label"></label>
                    <select asp-for="Administrador" class="form-control" disabled="true">
                    <option value="">Selecciona una opción</option>
                    <option value="True">Si</option>
                    <option value="False">No</option>
                </select>
                <span asp-validation-for="Administrador" class="text-danger"></span>
                </div>
            } else
            {
                <div class="form-group">
                    <label asp-for="Administrador" class="control-label"></label>
                    <select asp-for="Administrador" class="form-control">
                        <option value="">Selecciona una opción</option>
                        <option value="True">Si</option>
                        <option value="False">No</option>
                    </select>
                    <span asp-validation-for="Administrador" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="NombreYApellido" class="control-label">Nombre y Apellido</label>
                <input asp-for="NombreYApellido" class="form-control"/>
                <span asp-validation-for="NombreYApellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrasenia" class="control-label">Contraseña</label>
                <input asp-for="Contrasenia" class="form-control" />
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <span>@ViewBag.Mensaje</span>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
