@model IEnumerable<LogicaNegocio.Dominio.Linea>

@{
    ViewData["Title"] = "Index";
}
@{
    int pedidoId = ViewContext.HttpContext.Session.GetInt32("PedidoId") ?? 0;
}

<h1>Lineas creadas del pedido</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Articulo")
            </th>
            <th>
                @Html.DisplayName("Cantidad")
            </th>
            <th>
                @Html.DisplayName("Precio Unitario")
            </th>
            <th>
                @Html.DisplayName("Promocion")
            </th>
            <th>
                @Html.DisplayName("SubTotal")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Articulo.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
             
            <td>
                 @Html.DisplayFor(modelItem => item.Articulo.Precio)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Promocion.Nombre)
                </td>
            <td>
                    @Html.DisplayFor(modelItem => item.SubTotal)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
