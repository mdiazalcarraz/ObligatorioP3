@model IEnumerable<DTOs.DTOMovimientoStock>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Movimientos de Stock</h1>
<span>@ViewBag.Mensaje</span>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreArticulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreTipoMovimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadUnidades)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreArticulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreTipoMovimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadUnidades)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) 
                </td>
            </tr>
        }
    </tbody>
</table>
